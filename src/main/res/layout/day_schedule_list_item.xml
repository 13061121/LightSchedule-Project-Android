<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLl"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="@dimen/list_head_left_item_length"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/margin_top_bottom"
            android:text="一"
            android:textColor="#000000"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:id="@+id/tvLessonNum"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="8:00\n9:45"
            android:layout_marginBottom="@dimen/margin_top_bottom"
            android:id="@+id/tvLessonTime"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top_bottom"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginBottom="@dimen/margin_top_bottom"
        android:orientation="vertical"
        android:id="@+id/llSingleLessonTime">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:textColor="#212121"
            android:text="计组@主M201"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_top_bottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数据库@(一)301"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:textColor="#212121"/>

    </LinearLayout>

</LinearLayout>